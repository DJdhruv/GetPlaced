<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ScrollView02"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#0077B5"
        android:id="@+id/linearLayout">


        <ImageView
            android:id="@+id/profilepicture"
            android:layout_width="150dp"
            android:layout_height="250dp"
            android:scaleType="fitCenter"
            android:layout_weight="1"
             />

    </LinearLayout>

    <TextView
        android:id="@+id/studentname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignStart="@+id/emailaddress" />

    <TextView
        android:id="@+id/userid"
        android:layout_width="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/studentname"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp" />

    <TextView
        android:id="@+id/emailaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/userid"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp" />


    <TextView
        android:id="@+id/contactnumber"
        android:layout_width="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailaddress"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp" />
    <TextView
        android:id="@+id/Department"
        android:layout_width="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contactnumber"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp" />
    <TextView
        android:id="@+id/Program"
        android:layout_width="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Department"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp" />

    <Button
        android:id="@+id/createresume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Program"
        android:layout_marginTop="20dp"
        android:background="#0077B5"
        android:textColor="#ffffff"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Create Resume" />
    <Button
        android:id="@+id/logout"
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/createresume"
        android:background="#ffffff"
        android:textColor="#0077B5"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="13dp"
        android:text="Logout" />


</RelativeLayout>
    </ScrollView>
