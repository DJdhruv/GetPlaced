<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dhruv.getplaced.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GetPlaced"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:textSize="50dp"
        android:id="@+id/textView"
        android:layout_marginEnd="11dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_toStartOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@mipmap/logo"
        android:layout_marginTop="157dp"
        android:layout_marginEnd="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/student_login" />

    <Button
        android:id="@+id/student_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Login"
        android:textSize="20dp"
        android:paddingLeft="90dp"
        android:paddingRight="90dp"
        android:background="#0077B5"
        android:textColor="#ffffff"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/company_login"
        android:layout_alignEnd="@+id/company_login"
        android:layout_alignStart="@+id/company_login" />

    <Button
        android:id="@+id/company_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Company Login"
        android:textSize="20dp"
        android:textColor="#0077B5"
        android:background="#ffffff"
        android:paddingLeft="90dp"
        android:paddingRight="90dp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
