<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textAlignment="center"

        android:inputType="textPersonName"
        android:layout_marginLeft="90dp"
        android:text="Add New Offer"
        android:textColor="#0077B5"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp" />




    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginLeft="90dp"
        android:text="Offer Type"
        android:textColor="#000000"
        android:layout_below="@+id/heading"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />

    <RadioButton
        android:id="@+id/Internship"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/textView"
        android:textSize="20dp"
        android:layout_marginLeft="-20dp"
        android:layout_alignStart="@+id/textView"
        android:text="Internship"
        android:scaleX="0.8"
        android:scaleY="0.8"
        />

    <RadioButton
        android:id="@+id/Job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_marginStart="18dp"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        android:layout_toEndOf="@+id/Internship"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:text="Job" />


    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
       android:layout_marginTop="8dp"
        android:layout_marginLeft="90dp"
        android:text="Industry"
        android:textColor="#000000"
        android:layout_below="@+id/Internship"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/Industry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginTop="-8dp"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="90dp"
        android:text="Job Description"
        android:textColor="#000000"
        android:layout_below="@+id/Industry"
        android:layout_centerHorizontal="true" />
    <EditText
        android:id="@+id/Job_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="90dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-8dp"
        android:ems="10"
        android:inputType="textMultiLine"
        />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="90dp"
        android:text="Requirements"
        android:textColor="#000000"
        android:layout_below="@+id/Job_description"
        android:layout_centerHorizontal="true" />
    <EditText
        android:id="@+id/Requirements"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-8dp"
        android:ems="10"
        android:inputType="textPersonName"
        />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="90dp"
        android:text="Role"
        android:textColor="#000000"
        android:layout_below="@+id/Requirements"
        android:layout_centerHorizontal="true" />
    <EditText
        android:id="@+id/Role"
        android:layout_width="match_parent"
        android:layout_marginLeft="90dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"

        android:layout_marginTop="-8dp"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="90dp"
        android:text="Salary"
        android:textColor="#000000"
        android:layout_below="@+id/Role"
        android:layout_centerHorizontal="true" />
    <EditText
        android:id="@+id/Salary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="-8dp"
        android:ems="10"
        android:inputType="textMultiLine"
        />
    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="90dp"
        android:text="Recruitment Procedure"
        android:textColor="#000000"
        android:layout_below="@+id/Salary"
        android:layout_centerHorizontal="true" />
    <EditText
        android:id="@+id/Procedure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="-8dp"
        android:ems="10"
        android:inputType="textMultiLine"
        />
    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="90dp"
        android:text="Allowed Branches"
        android:textColor="#000000"
        android:layout_below="@+id/Procedure"
        android:layout_centerHorizontal="true" />
    <EditText
        android:id="@+id/Branches"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="-8dp"
        android:ems="10"
        android:inputType="textMultiLine"
        />

    <Button
        android:id="@+id/create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#4CAF79"
        android:textColor="#ffffff"
        android:text="Add"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/Branches"
        android:layout_alignStart="@+id/Branches"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="34dp" />
    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#d50000"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        android:text="Cancel"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/Branches"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/Branches"
        android:layout_marginEnd="34dp" />
</RelativeLayout>
    </LinearLayout>
</ScrollView>



