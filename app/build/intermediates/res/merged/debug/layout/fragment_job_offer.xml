        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="17dp"
        android:scaleType="fitCenter"

        android:background="@null"
        android:layout_marginBottom="19dp" />
</RelativeLayout>
