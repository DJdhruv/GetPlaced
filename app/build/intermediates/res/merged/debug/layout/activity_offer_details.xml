<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:fillViewport="true"
    android:scrollbars="none"
    tools:context="com.example.dhruv.getplaced.OfferDetails">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:textColor="#0077B5"
        android:text="OFFER DETAILS"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/offerdetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/heading"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="" />
    <TextView
        android:id="@+id/stude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="#0077B5"
        android:text="INTERESTED STUDENTS"
        android:textSize="20dp"
        android:layout_below="@+id/offerdetails"

        android:layout_centerHorizontal="true" />

    <ListView
        android:id="@+id/appliedstudents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/stude"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shortlistbutton"
        android:text="Shortlist"
        android:visibility="visible"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/appliedstudents"/>
    <TextView
        android:id="@+id/shortlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="#0077B5"
        android:text="SHORTLISTED STUDENTS"
        android:textSize="20dp"
        android:layout_below="@+id/shortlistbutton"

        android:layout_centerHorizontal="true" />

    <ListView
        android:id="@+id/shortlistedstudents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/shortlist"
        android:layout_alignParentStart="true" />




    </RelativeLayout>
    </LinearLayout>
</ScrollView>
